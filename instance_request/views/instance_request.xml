    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="instance_request.list">
      <field name="name">Demande de création d'instance</field>
      <field name="model">instance_request.instance_request</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="adress_ip"/>
          <field name="active"/>
          <field name="cpu"/>
          <field name="ram"/>
          <field name="disk"/>
          <field name="url"/>
          <field name="state"/>
          <field name="limit_date"/>
          <field name="treat_date"/>
          <field name="treat_duration"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="instance_request.form">
      <field name="name">Demande de création d'instance</field>
      <field name="model">instance_request.instance_request</field>
      <field name="arch" type="xml">
        <form string="idea form">
          <group>
            <group>
              <field name="name"/>
              <field name="adress_ip"/>
              <field name="active"/>
            </group>
            <group>
              <field name="cpu"/>
              <field name="ram"/>
              <field name="disk"/>
              <field name="url"/>
              <field name="state"/>
            </group>
            <group>
              <field name="limit_date"/>
              <field name="treat_date"/>
              <field name="treat_duration"/>
            </group>
          </group>
        </form>
      </field>
    </record>

