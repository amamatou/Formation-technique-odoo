<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="category_instance_request">
            <field name="name">Instance request</field>
        </record>

        <record model="res.groups" id="instance_request.group_user">
            <field name="name">UserInstance</field>
            <field name="category_id" ref="category_instance_request"/>
        </record>

        <record model="res.groups" id="instance_request.group_manager">
            <field name="name">ManagerInstance</field>
            <field name="category_id" ref="category_instance_request"/>
            <field name="implied_ids" eval="[(4, ref('instance_request.group_user'))]"/>
        </record>

        <record model="res.groups" id="instance_request.group_admin">
            <field name="name">AdminInstance</field>
            <field name="category_id" ref="category_instance_request"/>
            <field name="implied_ids" eval="[(4, ref('instance_request.group_manager'))]"/>
            <!--            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>-->
        </record>
    </data>
</odoo>